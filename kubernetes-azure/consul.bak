resource "kubernetes_pod" "consul_server" {
  metadata {
    name = "consul-server"

    labels {
      app = "consul-server"
    }
  }

  spec {
    container {
      image = "nicholasjackson/consul_connect:latest"
      name  = "consul-server"

      env {
        name  = "CONSUL_BIND_INTERFACE"
        value = "eth0"
      }

      env {
        name  = "CONSUL_UI_BETA"
        value = "true"
      }
    }
  }
}

resource "kubernetes_service" "consul_server" {
  metadata {
    name = "consul-server"
  }

  spec {
    selector {
      app = "${kubernetes_pod.consul_server.metadata.0.labels.app}"
    }

    session_affinity = "ClientIP"

    port {
      port        = 80
      target_port = 8500
    }

    type = "LoadBalancer"
  }
}

resource "kubernetes_replication_controller" "consul_agent" {
  metadata {
    name = "consul-agent"

    labels {
      app = "consul-agent"
    }
  }

  spec {
    selector {
      app = "consul-agent"
    }

    replicas = 3

    template {
      container {
        image = "nicholasjackson/consul_connect_agent:latest"
        name  = "consul-agent"

        args = ["-retry-join", "consul-server.default.svc.cluster.local"]

        env {
          name  = "CONSUL_BIND_INTERFACE"
          value = "eth0"
        }

        env {
          name  = "CONSUL_UI_BETA"
          value = "true"
        }
      }
    }
  }
}
