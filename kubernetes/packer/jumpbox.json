{
  "variables": {
    "client_id": "{{env `ARM_CLIENT_ID`}}",
    "client_secret": "{{env `ARM_CLIENT_SECRET`}}",
    "subscription_id": "{{env `ARM_SUBSCRIPTION_ID`}}",
    "tenant_id": "{{env `ARM_TENANT_ID`}}",
    "storage_account": "{{env `ARM_STORAGE_ACCOUNT`}}",
    "resource_group_name": "{{env `ARM_RESOURCE_GROUP`}}",
    "location": "{{env `ARM_LOCATION`}}",
    "vault_version": "0.11.1",
    "consul_version":"1.3.0"
  },
  "builders":[
    {
        "type": "azure-arm",
    
        "client_id": "{{user `client_id` }}",
        "client_secret": "{{user `client_secret`}}",
        "subscription_id": "{{user `subscription_id`}}",
        "tenant_id": "{{user `tenant_id`}}",
    
        "managed_image_name": "jumpbox",
        "managed_image_resource_group_name": "{{user `resource_group_name`}}",
    
        "os_type": "Linux",
        "image_publisher": "Canonical",
        "image_offer": "UbuntuServer",
        "image_sku": "16.04-LTS",
    
        "azure_tags": {
          "dept": "engineering"
        },
    
        "location": "{{user `location`}}",
        "vm_size": "Standard_DS1_V2"
    }
  ],
  "provisioners":[
    {
      "type": "file",
      "source": "./scripts/provision_jumpbox.sh",
      "destination": "/tmp/provision_jumpbox.sh"
    },
    {
      "type": "shell",
      "inline": [
        "sudo chmod +x /tmp/provision_jumpbox.sh",
        "sudo consul_version={{user `consul_version`}} vault_version={{user `vault_version`}} /tmp/provision_jumpbox.sh"
      ]
    }
  ]
}
